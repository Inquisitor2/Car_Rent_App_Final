<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#88FF0000" /> <!-- semi-transparent red glow -->
            <corners android:radius="12dp" />
            <padding android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp" />
        </shape>
    </item>

    <item android:top="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF3B30"
                android:endColor="#C1272D"
                android:angle="270" />
            <corners android:radius="12dp" />
        </shape>
    </item>

</layer-list>
